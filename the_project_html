    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The project</title>
    <link rel="stylesheet" href="the_project.css"> 
        <script>
          window.onload = function() {
         // Crie um elemento para a notificação
         const notification = document.createElement("div");
         notification.textContent = "This is a project in development!";
         notification.style.backgroundColor = "red";
         notification.style.padding = "5px";
         notification.style.margin = "10px"
 
         // Adicione a notificação ao corpo do documento
         document.body.appendChild(notification);

         // Remova a notificação após alguns segundos (opcional)
         setTimeout(() => notification.remove(), 3000);};
        </script> 
</head>
<body> 
  
    <div>
        <section class="banner"><h1>The project</h1></section>
    </div> 
    
